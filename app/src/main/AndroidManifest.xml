<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filesharedapp">


    <!-- 系统权限设置 -->

    <!-- 读取wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 改变wifi连接 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- Android 5.0之后需要获取下面两个权限才能开启热点 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 网络连接所需的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>


    <application
        android:name="com.example.filesharedapp.framework.ui.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 欢迎页 -->
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <!-- 主页 -->
        <activity
            android:name=".app.HomeMainActivity"
            android:label="@string/title_activity_home_main" >
        </activity>
        <!-- 传输条码信息展示页 -->
        <activity
            android:name=".app.transfers.SendShowActivity"
            android:label="@string/title_activity_send_show" >
        </activity>
        <!-- 文件传输进度展示页 -->
        <activity
            android:name=".app.transfers.TransferShowActivity"
            android:label="@string/title_activity_transfer_show" >
        </activity>
        <!-- 传输进度展示页面 -->
        <activity
            android:name=".app.transfers.ProgressActivity">
        </activity>
    </application>

</manifest>
